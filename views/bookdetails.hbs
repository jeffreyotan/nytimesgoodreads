<div class="row mt-3">
    <div class="col-4">
        <div class="row">
            <div class="col">
                <img src={{imagesrc}} alt="book image" style="width: 90%;">
            </div>
        </div>
        <div class="row mt-2">
            <div class="col">
                <p>Pages: {{pages}}</p>
                <p>Rating: {{rating}}</p>
                <p style="word-wrap: break-word;">
                    Genres:<br>
                    {{genres}}
                </p>
            </div>
        </div>
    </div>
    <div class="col">
        <h2>{{title}}</h2>
        <p>by {{authors}}</p>
        <p>{{{description}}}</p>
        <p></p>
        <p><a href="/books/{{title}}/reviews">Find Review</a></p>
        <p></p>
        <button class="btn btn-warning"><a href="/">Return Home</a></button>
    </div>
</div>